{% macro loop(page) %}
    {% for p in page.children.visible %}
        {% set current_page = (p.active or p.activeChild) ? 'current-menu-item' : '' %}
        {% if p.children.visible.count > 0 %}
            <li class="nav-item dropdown {{ current_page|e }} mx-lg-3">
                <a id="navbarDropdown" class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    {% if p.header.icon %}<i class="fa fa-{{ p.header.icon|e }}"></i>{% endif %}
                    {{ p.menu|e }}
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    {{ _self.loop(p) }}
                </ul>
            </li>
        {% else %}
            <li class="nav-item {{ current_page|e }} mx-lg-1">
                <a class="nav-link position-relative" href="{{ p.url|e }}">
                    {% if p.header.icon %}<i class="fa fa-{{ p.header.icon|e }}"></i>{% endif %}
                    {{ p.menu|e }}
                </a>
            </li>
        {% endif %}
    {% endfor %}
{% endmacro %}

<ul class="navbar-nav mx-auto mb-2 mb-lg-0 g-3 text-center text-xxl-start mt-3 mt-md-0">
    {% if config.theme.dropdown.enabled %}
        {{ _self.loop(pages) }}
    {% else %}
        {% for page in pages.children.visible %}
            {% set current_page = (page.active or page.activeChild) ? 'current-menu-item' : '' %}
            <li>
                <a href="{{ page.url|e }}">
                    {% if page.header.icon %}<i class="fa fa-{{ page.header.icon|e }}"></i>{% endif %}
                    {{ page.menu|e }}
                </a>
            </li>
        {% endfor %}
    {% endif %}
</ul>
